<style>
    h2 {
        font-family: Arial;
    }

    h4 {
        font-family: Arial
    }



    .button {
        background-color: #4CAF50;
        /* Green */
        border: none;
        color: white;
        padding: 16px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        transition-duration: 0.4s;
        cursor: pointer;
    }

    .returnHome {
        background-color: white;
        color: black;
        border: 2px solid #008CBA;
    }

    .returnHome:hover {
        background-color: #008CBA;
        color: white;
    }

    .batchUpload {
        background-color: white;
        color: black;
        border: 2px solid #f44336;
    }

    .batchUpload:hover {
        background-color: #f44336;
        color: white;
    }

    input[type=text] {
        width: 70%;
        padding: 12px 20px;
        margin: 8px 0;
        box-sizing: border-box;
        border: 3px solid #ccc;
        -webkit-transition: 0.5s;
        transition: 0.5s;
        outline: none;
    }

    input[type=text]:focus {
        border: 3px solid #555;
    }

    .enter {
        width: 25%;
        background-color: #4CAF50;
        /* Green */
        border: none;
        color: white;
        padding: 12px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        transition-duration: 0.4s;
        cursor: pointer;
    }
</style>

<h2>Authenticated with sudo access!</h2>

<button id="returnHome" onclick="location.href='<%= url %>' + '/token/' + '<%= token %>' + '/add'"
    class="button returnHome">Add
    New
    Address</button>

<button class="button batchUpload" id="batchUpload"
    onclick="window.open('<%= url %>' + '/token/' + '<%= token %>' + '/uploadcsv')">Batch Upload
    (CSV)</button>



<h4>Email</h4>
<input type="text" id="inputEmail" value="">
<button class="enter email" id="buttonEmail"
    onclick="location.href='<%= url %>' + '/token/' + '<%= token %>' + '/email/'+encodeURIComponent(document.getElementById('inputEmail').value)">Search
    by
    Email</button>

<script>
    var input = document.getElementById("inputEmail");
    input.addEventListener("keypress", function (event) {
        if (event.key === "Enter") {
            event.preventDefault();
            document.getElementById("buttonEmail").click();
        }
    });
</script>

